{{#if total}}
<div class="container-fluid">
<table id="myTable" class="table table-striped table-dark mt-3">
  <thead>
    <tr>
      <th class="hidden-xs-down" scope="col">SlNo.</th>
      <th scope="col">Name</th>

      <th class="hidden-xs-down" scope="col">Image</th>
      <th scope="col">Count</th>
      <th scope="col">Price</th>
      <th class="hidden-xs-down"scope="col"></th>
    </tr>
  </thead>
  <tbody>
      {{#each products}}
      
    <tr id="{{this.product._id}}">
    
      <td class="hidden-xs-down">{{@index}}</td>

      <td>{{this.product.name}}<div class="visible-xs mobileSmall"><img style="width: 2.5rem; height:3rem;" src="/productImages/{{this.product._id}}.png"></div></td>
      
      <td class="hidden-xs-down"><img style="width: 2.5rem; height:3rem;" src="/productImages/{{this.product._id}}.png"></td>

      <td>
        {{#if (lt this.quantity 2)}}
        <!button class="cart-item-count mr-2 btn btn-primary text-light" disabled><!/button>
        {{else}}{{/if}}
         <button class=" cart-item-count mr-2 btn btn-primary text-light" enabled onclick="changeQuantity('{{this._id}}','{{this.product._id}}',-1)"class="cart-item-count mr-3 btn btn-primary text-light ">-</button>
         
     <span class="prodCount">{{this.quantity}}</span> 
      <button class="ml-2 btn btn-primary text-light"onclick="changeQuantity('{{this._id}}','{{this.product._id}}',1)" >+</button><div class="visible-xs mobileSmall"><button  class="btn btn-danger" onclick="return confirm('Do you want to delete {{this.name}}') changeQuantity('{{this._id}}','{{this.product._id}}','-{{this.quantity}}')">Remove</button></div></td>
      <td class="price">Rs.{{multiply this.product.price this.quantity}}</td>
      <td class="hidden-xs-down"> <button  class="btn btn-danger" onclick="return confirm('Do you want to delete {{this.name}}') changeQuantity('{{this._id}}','{{this.product._id}}','-{{this.quantity}}')">Remove</button></td>
      </td></tr>
    {{/each}}
   
  </tbody>

</table>
  <hr><div class="float-right mr-5 pr-5 mt-3">
<h3 class=" float-left mr-5">TOTAL: <strong>Rs.<span id="total" >{{total}}</span></strong></h3><br>
<a class="btn btn-success mt-3 pr-5 pl-5" href="/placeOrder"><strong>Place Order</strong></a></div>
{{else}}
<div class="m-5 p-5 text-center" style="font-size: 50px;">Cart is Empty.<br> 
<a href="/" class="btn btn-primary">Continue Shopping</a></div>
</div>
{{/if}}
<script>
  $(document).ready( function () {
    $('#myTable').DataTable();
} );
</script>