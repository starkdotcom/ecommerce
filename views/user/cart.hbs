<div class="container-fluid">
<table class="table table-striped table-dark m-2">
  <thead>
    <tr>
      <th scope="col">SlNo.</th>
      <th scope="col">Name</th>

      <th scope="col">Image</th>
      <th scope="col">Count</th>
      <th scope="col">Price</th>
    </tr>
  </thead>
  <tbody>
      {{#each products}}
      
    <tr id="{{this.product._id}}">
    
      <td>{{@index}}</td>

      <td>{{this.product.name}}</td>
      
      <td><img style="width: 2.5rem; height:3rem;" src="/productImages/{{this.product._id}}.png"></td>

      <td>
        {{#if (lt this.quantity 2)}}
        <!button class="cart-item-count mr-2 btn btn-primary text-light" disabled><!/button>
        {{else}}{{/if}}
         <button class=" cart-item-count mr-2 btn btn-primary text-light" enabled onclick="changeQuantity('{{this._id}}','{{this.product._id}}',-1)"class="cart-item-count mr-3 btn btn-primary text-light ">-</button>
         
     <span class="prodCount">{{this.quantity}}</span> 
      <button class="ml-2 btn btn-primary text-light"onclick="changeQuantity('{{this._id}}','{{this.product._id}}',1)" >+</button></td>
      <td class="price">Rs.{{multiply this.product.price this.quantity}}</td>
      <td> <button  class="btn btn-danger" onclick="return confirm('Do you want to delete {{this.name}}') changeQuantity('{{this._id}}','{{this.product._id}}','-'+'{{this.quantity}}')">Remove</button></td>
      </td></tr>
    {{/each}}
   
  </tbody>

</table>
  <hr><div class="float-right mr-5 pr-5 mt-3">
<h3 class=" float-left mr-5">TOTAL: <strong>Rs.<span id="total" >{{#if total}}{{total}}{{/if}}</span></strong></h3><br>
<a class="btn btn-success mt-3 pr-5 pl-5" href="/placeOrder"><strong>Place Order</strong></a></div>
</div>

