<style>
  .modal {
    display: none;
    /* Hidden by default */
    position: fixed;
    /* Stay in place */
    z-index: 1;
    /* Sit on top */
    left: 0;
    top: 0;
    width: 100%;
    /* Full width */
    height: 100%;
    /* Full height */
    overflow: auto;
    /* Enable scroll if needed */
    background-color: rgb(0, 0, 0);
    /* Fallback color */
    background-color: rgba(0, 0, 0, 0.4);
    /* Black w/ opacity */
  }

  /* Modal Content/Box */
  .modal-content {
    background-color: #fefefe;
    margin: 15% auto;
    /* 15% from the top and centered */
    padding: 20px;
    border: 1px solid #888;
    width: 80%;
    /* Could be more or less, depending on screen size */
  }

  /* The Close Button */
  .btn.close {
    color: #aaa;
    float: right;
    font-size: 28px;
    font-weight: bold;
    text-align: right;
    margin-left: auto;
  }

  .close:hover,
  .close:focus {
    color: rgb(182, 7, 7);
    text-decoration: none;
    cursor: pointer;
  }

  th {
    color: #A1A1A1;
    font-size: 12px;
    font-weight: bold;
  }

  td {

    font-size: 14px;
  }

  td .mobileSmall {

    font-size: 12px;
  }

  @media only screen and (max-width: 420px) {
    .hidden-xs-down {
      display: none;
    }

    th,
    td {
      width: 100px;
      font-size: 14px;
    }

    #myBtn.btn {
      padding: 5px;
      margin: 1px;
      font-size: 12px;
    }
  }
</style>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
  integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">


    <div class="container-fluid">

      <table class="table table-hover table-striped table-dark mt-2">
        <thead>
          <tr>
            <th scope="col"></th>
            <th scope="col">Date</th>
            <th class="hidden-xs-down" scope="col">Address</th>
            <th class="hidden-xs-down" scope="col">Products</th>
            <th scope="col">Total</th>
            <th class="hidden-xs-down" scope="col">Mode of Payment</th>
            <th class="hidden-xs-down" scope="col">Status</th>

          </tr>
        </thead>
        <tbody>
          {{#each orders }}

          <tr id="{{this._id}}">

            <th scope="row"></th>
            <td>{{this.date}}</td>

            <td class="hidden-xs-down">
              {{this.deliveryDetais.address}},<br>{{this.deliveryDetais.city}},<br>{{this.deliveryDetais.state}},<br>{{this.deliveryDetais.pincode}},<br>PhNo.{{this.deliveryDetais.mobile}}
            </td>
            <td class="hidden-xs-down">
              {{#each this.products}}

              <span> <img class="" style="width: 5rem; height:7rem; position:absolute;"
                  src="/productImages/{{this.item}}.png"></img></span>{{/each}}</td>
            <td>Rs.{{this.total}}.00<div class="visible-xs mobileSmall">{{this.paymentMethod}}</div>
            </td>
            <td class="hidden-xs-down">{{this.paymentMethod}}</td>
            <td class="hidden-xs-down ">{{this.status}}</td>
            <td> <button id="myBtn" onclick="viewOrderedProd('{{this._id}}','{{this.userId}}')"
                class="btn btn-primary">View Products<div class="visible-xs mobileSmall">{{this.status}}</div>
              </button></td>
            </td>
          </tr>
          {{/each}}

        </tbody>

      </table>
    </div>
    <hr>
    <div class=" float-right mr-5 pr-5 mt-3">
    </div>

    <!-- The Modal -->
    <div id="myModal" class="modal">

      <!-- Modal content -->
      <div class="modal-content">
        <span class="btn close" style="float: right; margin:0;margin-left:auto">&times;</span>
        <p id="cont"></p>
      </div>
    </div>
    </div>
